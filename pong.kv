#:kivy 1.0.9

<PongBall>:
    size: 100, 100 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          
            source: 'assets/images/saturn2.png'

<PongRocket>:
    size: 100, 100
    canvas.before:
        PushMatrix
        Rotate:
            axis: 0,0,1
            angle: self.anglerocket
            origin: self.center
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          
            source: 'assets/images/spaceship1.png'
    canvas.after:
        PopMatrix

<PongBullet>:
    size: 50, 50
    canvas.before:
        PushMatrix
        Rotate:
            axis: 0,0,1
            angle: self.anglebullet
            origin: self.center
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          
            source: 'assets/images/bullet1.png'
    canvas.after:
        PopMatrix

<PongAlienship>:
    size: 75, 75
    canvas.before:
        PushMatrix
        Rotate:
            axis: 0,0,1
            origin: self.center
            angle: self.angleenemy
    canvas:
        Ellipse:
            pos: (self.pos[0],self.pos[1])
            size: self.size          
            source: 'assets/images/spaceship.png'
    canvas.after:
        PopMatrix

<PongFire>:
    size: 75, 75
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          
            source: 'assets/images/fire.png'

<PongLightning>:
    size: 75, 75
    canvas.before:
        PushMatrix
        Rotate:
            axis: 0,0,1
            origin: self.center
            angle: self.anglelightning
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          
            source: 'assets/images/explosion2.png'
    canvas.after:
        PopMatrix

<PongShark>:
    size: 75, 75
    canvas:
        Ellipse:
            pos: (self.pos[0]+300,self.pos[1]+50)
            size: self.size          
            source: 'assets/images/shark.png'

<PongPaddle>:   
    size: 25, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<PongGame>:
    ball1: pong_ball1
    spaceship2: pong_rocket
    alienship3: pong_alienship
    bullet4: pong_bullet
    lightning5: pong_lightning
    fire6: pong_fire
    shark7: pong_shark

    canvas:
        Rectangle:
            pos: self.pos
            size: self.width, self.height
            source: 'assets/images/galaxy2.jpg'
        Color:
            rgba: 1,1,1,.5
    Label:
        font_size: 30  
        center_x: root.width / 6
        top: root.top - 50
        text: "BadPlanet"
        
    Label:
        font_size: 30  
        center_x: root.width * 4 / 5
        top: root.top - 50
        text: "Score:"+str(self.parent.spaceship2.score) + " / Health:" + str(self.parent.spaceship2.health)

    PongBall:
        id: pong_ball1
        center: self.parent.center

    PongRocket:
        id: pong_rocket
        center: self.parent.center

    PongBullet:
        id: pong_bullet
        center: self.parent.center

    PongAlienship:
        id: pong_alienship
        center: self.parent.center

    PongLightning:
        id: pong_lightning
        center: self.parent.center

    PongFire:
        id: pong_fire
        center: self.parent.center

    PongShark:
        id: pong_shark
        center: self.parent.center